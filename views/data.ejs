<html>
<head>
  <%include partials/head %>
</head>
<body>
  <% include partials/header %>
  <div class="container">
    <div class="row">
      <% data.forEach(function(person) { %>
        <div class="col-md-3">
            <div class="card" style="margin-bottom: 8px;">
              <div class="card-block">
                <h5 class="card-title text-truncate"> <img class="card-img-top" height="32px" width="32px" src="<%= person.imageSrc %>"> <%= person.name %></h5>
                <h6 class="card-subtitle mb-2 text-muted"> <%= person.messageCount %> messages </h6>
              </div>
            </div>
        </div>
      <% }); %>
    </div>
  </div>
</body>
</html>
